# we want products that are in (sold in spring) and not in (not sold in spring)
# NOTE: this represents products that were ONLY sold in spring

SELECT DISTINCT 
    p.product_id, p.product_name
FROM 
    Sales s
LEFT JOIN Product p
    ON s.product_id = p.product_id WHERE s.product_id IN

	# products that were sold in spring
	(SELECT product_id
	FROM Sales
	WHERE sale_date BETWEEN '2019-01-01' AND '2019-03-31')

    AND s.product_id NOT IN

	# products that were not sold in spring
	(SELECT product_id
	FROM Sales
	WHERE sale_date NOT BETWEEN '2019-01-01' AND '2019-03-31')
